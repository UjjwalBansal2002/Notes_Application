<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_252525"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".search.activity.SearchActivity"
    android:paddingHorizontal="25dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_grey"
    android:gravity="center_vertical"
    android:layout_marginTop="50dp"
    >
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:hint="@string/search_your_notes"
        android:textColorHint="@color/grey_9A9A9A"
        android:paddingHorizontal="15dp"
        android:paddingVertical="14dp"
        android:layout_weight="1"
        />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        android:layout_marginEnd="20dp"
        />
</LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:visibility="gone"
        tools:itemCount="5"
        tools:listitem="@layout/item_note" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_nothing_found"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/file_not_found_try_searching_again"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:id="@+id/tvNothingFound"
        />
</LinearLayout>